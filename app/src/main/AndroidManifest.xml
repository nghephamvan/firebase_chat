        <activity
            android:name=".Activities.AddGroupMember"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|screenSize"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
