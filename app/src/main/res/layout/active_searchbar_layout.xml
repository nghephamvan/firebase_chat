<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/active_searchbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <FrameLayout
            android:id="@+id/frame_back"
            android:layout_width="@dimen/standard_icon_width"
            android:layout_height="@dimen/standard_icon_width"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:focusable="false">

            <ImageView
                android:layout_width="@dimen/standard_icon_size"
                android:layout_height="@dimen/standard_icon_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_back" />

        </FrameLayout>

        <EditText
            android:id="@+id/edt_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:ellipsize="end"
            android:hint="nhập từ khóa"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:lines="1"
            android:maxLines="1"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="normal" />

        <FrameLayout
            android:id="@+id/frame_clear_keyword"
            android:layout_width="@dimen/standard_icon_width"
            android:layout_height="@dimen/standard_icon_width"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="invisible">

            <ImageView
                android:layout_width="@dimen/standard_icon_size"
                android:layout_height="@dimen/standard_icon_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_xcross_circle" />

        </FrameLayout>


    </LinearLayout>

</com.google.android.material.appbar.AppBarLayout>

