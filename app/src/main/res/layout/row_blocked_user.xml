<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/row_margin_left_right"
    android:paddingTop="@dimen/row_margin_top_bottom"
    android:paddingRight="@dimen/row_margin_left_right"
    android:paddingBottom="@dimen/row_margin_top_bottom"
    android:weightSum="1">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_avatar"
        android:layout_width="@dimen/avatar_tiny"
        android:layout_height="@dimen/avatar_tiny"
        android:src="@drawable/ic_default_user_avatar" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxLines="1"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_text_size" />

    <FrameLayout
        android:id="@+id/frame_unlock"
        android:layout_width="@dimen/standard_icon_width"
        android:layout_height="@dimen/standard_icon_width"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="@dimen/standard_icon_size"
            android:layout_height="@dimen/standard_icon_size"
            android:layout_gravity="center"
            android:background="?actionBarItemBackground"
            android:focusable="false"
            android:src="@drawable/ic_xcross_circle" />
    </FrameLayout>

</LinearLayout>





