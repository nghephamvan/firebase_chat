<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp"
    android:weightSum="1">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/conversation_avatar"
            android:layout_width="@dimen/avatar_medium"
            android:layout_height="@dimen/avatar_medium" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_active_dot"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_active_dot"
            android:visibility="gone"
            app:civ_border_color="@color/white"
            app:civ_border_width="3dp"
            app:layout_anchor="@id/conversation_avatar"
            app:layout_anchorGravity="bottom|right"

            />

        <TextView
            android:id="@+id/tv_offline_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/offline_time_bg"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            android:minWidth="30dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textColor="@color/black"
            android:textSize="8sp"
            android:visibility="gone"
            app:layout_anchor="@id/conversation_avatar"
            app:layout_anchorGravity="bottom|right" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_name_conv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:lines="1"
            android:maxLines="1"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.emoji.widget.EmojiAppCompatTextView
                android:id="@+id/tv_mess_conv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/small_text_size"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_time_conv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_time_conv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:lines="1"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/small_text_size"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/btn_callback"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="15dp"
        android:background="?actionBarItemBackground"
        android:focusable="false"
        android:src="@drawable/ic_video_call_circle"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/img_no_notify"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_muted_grey"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/img_status"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_status_sending"
        android:visibility="gone" />


</LinearLayout>

